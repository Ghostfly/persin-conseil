{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist/",
        "experimentalDecorators": true
      }
    }